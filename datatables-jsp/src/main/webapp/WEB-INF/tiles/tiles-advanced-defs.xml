<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN" "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions>
   
   <!-- Basic layout -->
   <definition name="advancedLayout" extends="mainLayout">
      <put-attribute name="sidebar" value="/WEB-INF/views/jsp/common/sidebarAdvanced.jsp" cascade="true" />
   </definition>
   
   <definition name="advanced.*" extends="advancedLayout">
      <put-attribute name="tabAdvanced" value="active" />
