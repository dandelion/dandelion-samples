<tiles-definitions>
   
   <!-- Basic layout -->
   <definition name="basicLayout" extends="mainLayout">
      <put-attribute name="sidebar" value="/WEB-INF/views/jsp/common/sidebarBasic.jsp" cascade="true" />
   </definition>
   
   <definition name="basic.*" extends="basicLayout">
